{
  "manifest_version": 3,
  "name": "SkribblPro",
  "version": "1.0.2",
  "description": "Automatically suggests guesses in Skribbl.io.",
  "permissions": ["storage"],
  "host_permissions": ["https://skribbl.io/*"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://skribbl.io/*"],
      "js": ["content.js"]
    }
  ]
}
